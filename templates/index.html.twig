{% extends 'base.html.twig' %}

{% block body %}
    <div class="pt-14 pb-14 page-content">
        <div class="container ">
            <div class="row">
                <div class="col-lg-3">
                    <div class="card categories">
                        <div class="card-header">
                            <h5>Kategorijos</h5>
                        </div>
                        <div class="card-body">
                            {% for category in categories %}
                                <a href="{{ path('category_list', {'category_slug': category.item.slug}) }}" class="{% if currentCategory and category.item.id == currentCategory.id %}active{% endif %}">
                                    {{ category.item.levelPads }} {{ category.item.title }}
                                </a>
                            {% endfor %}
                        </div>
                    </div>
                </div>
                <div class="col-lg-9">
                    <div class="row">

                        {% for i in 0..10 %}
                            <div class="col-lg-4">
                                <div class="product">
                                    <div class="product--image" style="background: url(https://www.vulcan.lt/images/T/0002a.jpg?re=1155);">
                                        <span class="price">{{ random(200) }} &euro;</span>
                                    </div>
                                    <div class="card-body">
                                        <p>Rudens striukÄ—</p>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}

                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
